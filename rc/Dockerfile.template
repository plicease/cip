FROM plicease/ciperl-base:latest
LABEL maintainer="Graham Ollis <plicease@cpan.org>"

RUN curl https://raw.githubusercontent.com/tokuhirom/Perl-Build/master/perl-build | perl - #PERL_VERSION# /opt/perl/#PERL_VERSION#/
RUN curl https://cpanmin.us | /opt/perl/#PERL_VERSION#/bin/perl - App::cpanminus
ENV PATH /opt/perl/#PERL_VERSION#/bin:$PATH

RUN cpanm -n -L /opt/dzil Dist::Zilla Dist::Zilla::PluginBundle::Author::Plicease
ADD cpanm-wrapper /opt/dzil/bin/cpanm-wrapper
ADD dzil-wrapper /opt/dzil/bin/dzil-wrapper
RUN ln -s /opt/dzil/bin/cpanm-wrapper /opt/perl/#PERL_VERSION#/bin/dzil-cpanm
RUN ln -s /opt/dzil/bin/dzil-wrapper /opt/perl/#PERL_VERSION#/bin/dzil
RUN chmod +x /opt/perl/#PERL_VERSION#/bin/dzil-cpanm /opt/perl/#PERL_VERSION#/bin/dzil

ENV PERL_USE_UNSAFE_INC 0
